extends ../common/common
block admin 
 .mws-panel.grid_8
  .mws-panel-header
    span 食品添加
  .mws-panel-body.no-padding
    form.mws-form(action='/admin/foodsdoadd' method='POST' enctype='multipart/form-data')
      .mws-form-inline
        .mws-form-row
          label.mws-form-label 食品名称
          .mws-form-item
            input.medium(type='text' name="foodname")
        .mws-form-row
          label.mws-form-label 食品描述
          .mws-form-item
            input.medium(type='text' name="descr")
        .mws-form-row
          label.mws-form-label 食品价格
          .mws-form-item
            input.medium(type='text' name="price")
        .mws-form-row
          label.mws-form-label 食品图片
          .mws-form-item
            input.medium(type='file' name="foodpic")
        .mws-form-row
          label.mws-form-label 店铺名
          .mws-form-item
           select.large(name="shoplist_id")
            option(value="") --请选择-- 
            -for(let v of data)
              option(value=`${v.id}`)  --#{v.shopname}--
      .mws-button-row
        input.btn.btn-danger(type='submit' value='添加')
        input.btn(type='reset' value='点击重置')


