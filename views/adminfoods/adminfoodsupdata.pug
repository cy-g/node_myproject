extends ../common/common
block admin 
 .mws-panel.grid_8
  .mws-panel-header
    span 食品修改
  .mws-panel-body.no-padding
    form.mws-form(action='/admin/foodsdoupdata' method='POST' enctype='multipart/form-data')
      .mws-form-inline
        .mws-form-row
          label.mws-form-label 食品名称
          .mws-form-item
            input.medium(type='text' name="foodname" value=`${datas.foodname}`)
        .mws-form-row
          label.mws-form-label 食品描述
          .mws-form-item
            input.medium(type='text' name="descr" value=`${datas.descr}`)
        .mws-form-row
          label.mws-form-label 食品价格
          .mws-form-item
            input.medium(type='text' name="price" value=`${datas.price}`)
        .mws-form-row
          label.mws-form-label 旧食品图片
          .mws-form-item
            img(src=`https://cyfirst.oss-cn-beijing.aliyuncs.com/${datas.foodpic}`, alt="")
        .mws-form-row
          label.mws-form-label 新食品图片
          .mws-form-item
            input.medium(type='file' name="foodpic")
            input.medium(type='hidden' name="id",value=`${datas.id}`)
        .mws-form-row
          label.mws-form-label 店铺名
          .mws-form-item
           select.large(name="shoplist_id")
            option(value="") --请选择-- 
            -for(let v of shop)
              option(value=`${v.id}`)  --#{v.shopname}--
      .mws-button-row
        input.btn.btn-danger(type='submit' value='修改')
        input.btn(type='reset' value='点击重置')


